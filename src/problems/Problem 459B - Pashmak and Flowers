long long n;
cin >> n;
long long * arr = new  long long[n];
 
 
 
 
long long co1 = 0, co2 = 0;
for (int i = 0; i < n; i++){
 
	cin >> arr[i];
}
 
sort(arr,arr+n);
 
cout << arr[n - 1] - arr[0] << endl;
if (arr[0] == arr[n- 1])
{
	cout << (n*(n - 1)) / 2 << endl;
	return 0;
}
 
for (int i = 0; i < n; i++)
{
	if (arr[i] == arr[0])
		co1++;
	else if (arr[i] == arr[n - 1])
		co2++;
}
 
           cout << co1*co2 << endl;
 
 
 
		return 0;
	}
